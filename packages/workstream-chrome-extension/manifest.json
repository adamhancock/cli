{
  "manifest_version": 3,
  "name": "Workstream Cookie Sync",
  "description": "Sync cookies, localStorage, and log HTTP requests for development environments",
  "version": "0.1.0",
  "permissions": [
    "cookies",
    "webRequest",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.localhost/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.localhost/*"],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Workstream Cookie Sync"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
